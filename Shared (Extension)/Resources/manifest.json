{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0",

    "icons": {
      "48": "images/icon.svg",
      "512": "images/icon.svg"
    },

    "background": {
        "scripts": [ "background.js" ],
        "type": "module",
        "persistent": false
    },

    "content_scripts": [{
        "js": [ "content.js" ],
        "matches": [ "http://*/*", "https://*/*" ]
    }],

    "action": {
        "default_icon": "images/toolbar-icon.svg"
    },

    "permissions": [ "activeTab", "tabs", "contextMenus" ]
}
